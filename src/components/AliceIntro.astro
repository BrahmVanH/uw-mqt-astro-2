---
import { config } from '@/config/aliceIntro';
import { UNITED_FOR_ALICE_YOUTUBE_LINK } from '@/lib/constants';
import { capitalizeFirstLetters } from '@/lib/utils';
import { YouTube } from '@astro-community/astro-embed-youtube';

const { heading, text, heading2, text2, aliceDemographic, text3, link } = config;
---

<div class='w-[80%] mx-auto my-4 px-4 *:mb-2'>
  <div>
    <h3 class='text-xl underline decoration-2 decoration-primary-blue-3 underline-offset-4'>{heading}</h3>
    <p>{text}</p>
  </div>
  <div class='w-full flex'>
    <div class='w-1/2'>
      <div class='*:mb-1'>
        <h4 class='text-lg normal-case'>{capitalizeFirstLetters(heading2)}</h4>
        <p>{text2}</p>
        <p>{aliceDemographic.title}</p>
        <ul class='list-disc'>
          {
            aliceDemographic.descriptors.map(d => (
              <li class='text-xs ml-4'>
                <p class='text-md'>{d}</p>
              </li>
            ))
          }
        </ul>
        <p>{text3}</p>
      </div>
    </div>
    <div class='w-3/8 m-auto'>
      <YouTube id={UNITED_FOR_ALICE_YOUTUBE_LINK} />
    </div>
  </div>
</div>
