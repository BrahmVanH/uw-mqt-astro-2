---
import Logo from '@/image/logo-no-text.svg';
---

<div class='loading-container'>
	<div class='logo-wrapper'>
		<img src={Logo.src} class='max-w-[200px]' alt='United Way Logo' class='logo'  />
		<div class='pulse'></div>
	</div>
</div>

<script lang='ts' is:inline>
	setTimeout(() => {
		if (typeof window !== 'undefined' && window.location.pathname !== '/404') {
			window.location.href = '/404';
		}
	}, 20000);
</script>

<style>
	.loading-container {
		position: fixed;
		top: 0;
		left: 0;
		width: 100vw;
		height: 100vh;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: white;
		z-index: 9999;
	}

	.logo-wrapper {
		position: relative;
		width: 200px;
		height: 200px;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.logo {
		width: 156px;
		height: auto;
		z-index: 2;
	}

	.pulse {
		position: absolute;
		width: 100%;
		height: 100%;
		background: rgba(255, 186, 0, 0.3); /* Primary orange with transparency */
		border-radius: 50%;
		animation: pulse 2s ease-out infinite;
	}

	@keyframes pulse {
		0% {
			transform: scale(0.95);
			opacity: 0.8;
		}
		50% {
			transform: scale(1.3);
			opacity: 0;
		}
		100% {
			transform: scale(0.95);
			opacity: 0;
		}
	}
</style>
