{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"jsx": "react-jsx",
		"jsxImportSource": "react",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
		},
		"allowJs": true,
		"strictNullChecks": true
	}
}
